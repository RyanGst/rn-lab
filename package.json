{
	"name": "rn-lab",
	"version": "1.0.0",
	"private": true,
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"start:app": "turbo run start",
		"type-check": "turbo run type-check",
		"test:ci": "turbo run test:ci"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"lefthook": "^1.7.14",
		"turbo": "latest"
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "pnpm@9.10.0"
}
